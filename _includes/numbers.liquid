<!doctype html>
<html lang="en">
    <head>
        {% include head.liquid %}
    </head>
    <body class="{{ bodyClass }}">
        {% include menu.liquid %}
        <main class="numbers">
        <h1>{{ pageTitle | transformTitle: titleStart, titleEnd }} </h1>
        <div class="number-grid">
        <p class="tagline">{{ tagline }} </p>
        <a href="{{ link }}" class="button orange">View Programs</a>
        </div>
        <h2>2019 By The Numbers</h2>
        <ul class="stats no-bullets">
        {% for stat in stats %}
            <li>{{ stat | transformStat }}</li>
        {% endfor %}
        </ul>
        {{ content }}
        </main>
    </body>
</html>