<!doctype html>
<html lang="en">
    <head>
        {% include head.liquid %}
    </head>
    <body class="{{ bodyClass }}">
        {% include menu.liquid %}
        <main class="numbers il-formatted">
        <h1 class="numbers-width">{{ pageTitle | transformTitle: titleStart, titleEnd }} </h1>
        <div class="numbers-width number-grid">
        <p class="tagline">{{ tagline }} </p>
        <a href="{{ link }}" class="button orange">View Programs</a>
        </div>
        <h2><div class="numbers-width">2021 By The Numbers</div></h2>
        <ul class="numbers-width stats no-bullets">
        {% for stat in stats %}
            <li>{{ stat | transformStat }}</li>
        {% endfor %}
        </ul>
        <h2><div class="numbers-width">Our Programs</div></h2>
        <div class="numbers-width">
        {{ content }}
        </div>
        </main>
    </body>
</html>